<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.usiu.loan.controller.LoginController">
    <top>
        <Label text="Loan Management System - Login" style="-fx-font-size: 24px; -fx-padding: 20px;" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <TextField fx:id="usernameField" promptText="Username" prefWidth="250"/>
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250"/>
            <Label fx:id="errorLabel" textFill="red"/>
            <Button text="Login" onAction="#handleLogin" prefWidth="250"/>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10px;" BorderPane.alignment="CENTER">
            <Button text="Quit" onAction="#handleQuit" prefWidth="100"/>
        </HBox>
    </bottom>
</BorderPane>